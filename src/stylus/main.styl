
*
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
  -webkit-touch-callout: none
  -webkit-overflow-scrolling: touch


html,
body
  width: 100%
  height: 100%
  // https://www.zhangxinxu.com/wordpress/2018/10/scroll-behavior-scrollintoview-%E5%B9%B3%E6%BB%91%E6%BB%9A%E5%8A%A8/
  scroll-behavior: smooth
  overflow-x: hidden

html

body
  background-color: #ffffff
  font-size: 14px
  line-height: 1.4
  color: #414141


  min-width: 320px
  margin: 0 auto !important

  font-family: "Helvetica Neue", Helvetica, 'PingFang SC', 'Microsoft Yahei', sans-serif
  // 字体平滑化(反锯齿)
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  text-rendering: optimizeLegibility


/**
 * 重设样式
 */

*,
*::before,
*::after
  box-sizing: border-box


/**
 * `table` 相邻单元格的边框间的距离设置为0。
 * 设置`table`的边框为合并模式。
 */

table
  border-spacing: 0
  border-collapse: collapse

/**
 * 移除浏览器部分元素的默认边框
 */

img,
abbr,
input,
button,
acronym,
fieldset,
textarea
  border: none

/**
 * 让`textarea`默认不可以放缩
 */
textarea
  resize: none

input,
select,
textarea
  font-size: 100%

/* 去掉 firefox 下此元素的边框 */
abbr,
acronym
  border: 0
  font-variant: normal

/* 一致的 del 样式 */
del
  text-decoration: line-through


/* 对齐是排版最重要的因素, 别让什么都居中 */
caption,
th
  text-align: left

/* 来自 yahoo, 让标题都自定义, 适应多个系统应用 */
h1,
h2,
h3,
h4,
h5,
h6
  font-weight: 500


/* 统一上标和下标 */
sub,
sup
  font-size: 75%
  line-height: 0
  position: relative
  vertical-align: baseline

sup
  top: -0.5em

sub
  bottom: -0.25em

/**
 * 以下元素的部分属性没有继承父节点样式，所以声明这些元素的这些属性为父元素的属性。
 * 取消这些元素的`outline`样式。
 */

a,
input,
select,
button,
option,
textarea,
optgroup
  font-family: inherit
  font-size: inherit
  font-weight: inherit
  font-style: inherit
  line-height: inherit
  color: inherit
  outline: none

/**
 * 取消下面元素的默认文字装饰（下划线、中划线）
 */
a,
ins
    text-decoration: none

i
  font-style: normal

/**
 * 取消ol，ul默认列表样式 （为了文章页面需要去掉对ol的重置，尽量避免在其他页面使用这个元素）
 */

ul
  list-style: none

/**
 * 输入控件的 `placeholder` 颜色设置为`#999`（浅灰色）
 */

input::-webkit-input-placeholder,
textarea::-webkit-input-placeholder
  color: #ccc

input:-moz-placeholder,
textarea:-moz-placeholder
  color: #ccc

input::-moz-placeholder,
textarea::-moz-placeholder
  color: #ccc

input:-ms-input-placeholder,
textarea:-ms-input-placeholder
  color: #ccc

button,
input,
select,
textarea
  margin: 0
  font-size: 100%
  vertical-align: middle

button,
input
  *overflow: visible
  line-height: normal

button::-moz-focus-inner,
input::-moz-focus-inner
  padding: 0
  border: 0

button,
input[type="button"],
input[type="reset"],
input[type="submit"]
  // 所有按钮上的游标都是一致的
  cursor: pointer
  // 在iOS中可点击的输入
  -webkit-appearance: button

input[type="search"]
  -webkit-appearance: textfield
  -webkit-box-sizing: content-box
  -moz-box-sizing: content-box
  box-sizing: content-box

// 在Chrome OSX，Safari 5中，内部填充问题
input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button
  -webkit-appearance: none

textarea
  // 在ie6-9中删除垂直滚动条
  overflow: auto
  vertical-align: top



/**
 * 基础样式
 */


// 左右浮动元素
.fl
  float: left

.fr
  float: right

// 避免因子元素浮动而导致父元素高度缺失
.clear
  zoom: 1

.clear::after
  content: ''
  display: table
  clear: both


/**
 * 样式库
 */

// 单行省略号
.lang-ellipsis
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  word-wrap: normal

// 两行省略号
.lang-ellipsis--l2
  max-height: 40px
  line-height: 20px
  overflow: hidden
  text-overflow: ellipsis
  display: -webkit-box
  -webkit-line-clamp: 2
  -webkit-box-orient: vertical

// 三行省略号
.lang-ellipsis--l3
  max-height: 60px
  line-height: 20px
  overflow: hidden
  text-overflow: ellipsis
  display: -webkit-box
  -webkit-line-clamp: 3
  -webkit-box-orient: vertical

// 细边界线 上下左右 解决IOS上边界1px
.lang-hairline,
.lang-hairline--bottom,
.lang-hairline--left,
.lang-hairline--right,
.lang-hairline--surround,
.lang-hairline--top,
.lang-hairline--top-bottom
  position: relative

.lang-hairline--bottom::after,
.lang-hairline--left::after,
.lang-hairline--right::after,
.lang-hairline--surround::after,
.lang-hairline--top-bottom::after,
.lang-hairline--top::after,
.lang-hairline::after
  content: ''
  position: absolute
  top: 0
  width: 200%
  height: 200%
  transform: scale(0.5)
  transform-origin: 0 0
  pointer-events: none
  box-sizing: border-box
  border: 0 solid #f1f1f1
  border-bottom-width: 1px
  left: 0
  right: 0


.lang-hairline--top::after
  border-top-width: 1px

.lang-hairline--left::after
  border-left-width: 1px

.lang-hairline--right::after
  border-right-width: 1px

.lang-hairline--bottom::after
  border-bottom-width: 1px

.lang-hairline--top-bottom::after
  border-width: 1px 0

.lang-hairline--surround::after
  border-width: 1px


/**
 * 全局样式
 */
@import 'global'